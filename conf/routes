# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                         controllers.Application.index()
GET        /config                   controllers.Application.config()
GET        /:pinNumber               controllers.Arduino.readDigitalPin(pinNumber: Int)
GET        /:pinNumber/:value        controllers.Arduino.writeDigitalPin(pinNumber: Int, value: String)
GET        /:pinNumber               controllers.Arduino.readAnalogPin(pinNumber: String)

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file             controllers.Assets.at(path="/public", file)
